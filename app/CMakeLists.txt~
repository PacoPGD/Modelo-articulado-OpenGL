INCLUDE_DIRECTORIES(${PROJECT_SOURCE_DIR}/src ${GNULIBS_INCLUDE_DIR})
INCLUDE_DIRECTORIES(${PROJECT_SOURCE_DIR}/src/obj ${GNULIBS_INCLUDE_DIR})
INCLUDE_DIRECTORIES(${PROJECT_SOURCE_DIR}/src/3ds ${GNULIBS_INCLUDE_DIR})
INCLUDE_DIRECTORIES(${PROJECT_SOURCE_DIR}/src/math ${GNULIBS_INCLUDE_DIR})
INCLUDE_DIRECTORIES(/usr/include/SDL)

LINK_LIBRARIES(${PROJECT_NAME})

IF(GL_FOUND)
  ADD_EXECUTABLE(esqueleto esqueleto.cpp)
  TARGET_LINK_LIBRARIES(esqueleto ${glut_LIBS} ${GL_LIBS}  ${GLU_LIBS} ${SDLIMG_LIBS} ${PNG_LIBS} ${JPG_LIBS} ${OpenCV_LIBS})

  ADD_EXECUTABLE(virtua_test virtua_test.cpp)
  TARGET_LINK_LIBRARIES(virtua_test ${glut_LIBS} ${GL_LIBS}  ${GLU_LIBS} ${SDLIMG_LIBS} ${PNG_LIBS} ${JPG_LIBS} ${OpenCV_LIBS})

  ADD_EXECUTABLE(virtua_test_obj virtua_test_obj.cpp)
  TARGET_LINK_LIBRARIES(virtua_test_obj ${glut_LIBS} ${GL_LIBS}  ${GLU_LIBS} ${SDLIMG_LIBS} ${PNG_LIBS} ${OpenCV_LIBS})

  ADD_EXECUTABLE(virtua_test_ds3 virtua_test_ds3.cpp)
  TARGET_LINK_LIBRARIES(virtua_test_ds3 ${glut_LIBS} ${GL_LIBS}  ${GLU_LIBS} ${SDLIMG_LIBS} ${PNG_LIBS} ${OpenCV_LIBS})

ADD_EXECUTABLE(virtua_test_perspective virtua_test_perspective.cpp)
  TARGET_LINK_LIBRARIES(virtua_test_perspective ${glut_LIBS} ${GL_LIBS}  ${GLU_LIBS} ${SDLIMG_LIBS} ${PNG_LIBS} ${OpenCV_LIBS})

ADD_EXECUTABLE(virtua_test_math virtua_test_math.cpp)
  TARGET_LINK_LIBRARIES(virtua_test_math ${glut_LIBS} ${GL_LIBS}  ${GLU_LIBS} ${SDLIMG_LIBS} ${PNG_LIBS} ${OpenCV_LIBS})

ADD_EXECUTABLE(virtua_test_img virtua_test_img.cpp)
  TARGET_LINK_LIBRARIES(virtua_test_img ${glut_LIBS} ${GL_LIBS}  ${GLU_LIBS} ${SDLIMG_LIBS} ${PNG_LIBS} ${OpenCV_LIBS})

ADD_EXECUTABLE(virtua_test_video virtua_test_video.cpp)
  TARGET_LINK_LIBRARIES(virtua_test_video ${glut_LIBS} ${GL_LIBS}  ${GLU_LIBS} ${SDLIMG_LIBS} ${PNG_LIBS} ${OpenCV_LIBS})

ADD_EXECUTABLE(virtua_test_video2 virtua_test_video2.cpp)
  TARGET_LINK_LIBRARIES(virtua_test_video2 ${glut_LIBS} ${GL_LIBS}  ${GLU_LIBS} ${SDLIMG_LIBS} ${PNG_LIBS} ${OpenCV_LIBS})

ADD_EXECUTABLE(virtua_test_transform virtua_test_transform.cpp)
  TARGET_LINK_LIBRARIES(virtua_test_transform ${glut_LIBS} ${GL_LIBS}  ${GLU_LIBS} ${SDLIMG_LIBS} ${PNG_LIBS} ${OpenCV_LIBS})

ADD_EXECUTABLE(virtua_test_anim virtua_test_anim.cpp)
  TARGET_LINK_LIBRARIES(virtua_test_anim ${glut_LIBS} ${GL_LIBS}  ${GLU_LIBS} ${SDLIMG_LIBS} ${PNG_LIBS} ${OpenCV_LIBS})

  INSTALL(TARGETS esqueleto virtua_test virtua_test_obj virtua_test_ds3 virtua_test_perspective virtua_test_math virtua_test_img virtua_test_video virtua_test_transform virtua_test_anim RUNTIME DESTINATION bin)
ENDIF(GL_FOUND)
